# Champion's Email Engine - Environment Configuration
# Copy this file to .env and fill in your values

# ============================================
# FalkorDB Configuration
# ============================================
FALKORDB_HOST=localhost
FALKORDB_PORT=6379
FALKORDB_BROWSER_PORT=3000
FALKORDB_PASSWORD=
# Leave password empty for local development
# Set a strong password for production

# ============================================
# Redis Cache Configuration
# ============================================
REDIS_HOST=localhost
REDIS_PORT=6380
REDIS_PASSWORD=
# Note: Using port 6380 to avoid conflict with FalkorDB on 6379

# ============================================
# OpenAI / LLM Configuration
# ============================================
# Required for Graphiti embeddings and entity extraction
OPENAI_API_KEY=sk-your-openai-key-here

# Optional: Alternative LLM providers
ANTHROPIC_API_KEY=sk-ant-your-key-here
OPENROUTER_API_KEY=

# ============================================
# Graphiti MCP Server (Optional)
# ============================================
GRAPHITI_MCP_PORT=8765

# ============================================
# BillionMail Configuration
# ============================================
# BillionMail runs in its own docker-compose
# These are for the API integration

BILLIONMAIL_API_URL=http://localhost:8025
BILLIONMAIL_API_KEY=
BILLIONMAIL_HOSTNAME=mail.yourdomain.com

# SMTP Settings (for direct SMTP if needed)
SMTP_HOST=localhost
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=

# ============================================
# Database (Future - FastAPI backend)
# ============================================
# DATABASE_URL=postgresql://user:pass@localhost:5432/champions

# ============================================
# n8n Integration
# ============================================
N8N_WEBHOOK_URL=http://localhost:5678/webhook
N8N_API_KEY=

# ============================================
# Application Settings
# ============================================
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO

# ============================================
# Lake B2B Integration
# ============================================
LAKE_B2B_API_KEY=
LAKE_B2B_API_URL=https://api.lakeb2b.com
