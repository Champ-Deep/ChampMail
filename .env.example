# ChampMail Environment Configuration
# Copy to .env and fill in your values
# All AI services route through OpenRouter - one API key for everything

# APPLICATION
DEBUG=true
ENVIRONMENT=development

# POSTGRESQL
POSTGRES_HOST=localhost
POSTGRES_USER=champmail
POSTGRES_PASSWORD=champmail_dev
POSTGRES_DB=champmail
POSTGRES_PORT=5432

# REDIS
REDIS_HOST=localhost
REDIS_PORT=6380

# SECURITY (CHANGE IN PRODUCTION!)
JWT_SECRET_KEY=your-secret-key-change-in-production

# AI - OpenRouter (ONLY key needed for ALL AI features)
# Get your key at: https://openrouter.ai/keys
OPENROUTER_API_KEY=sk-or-v1-your-key-here

# SMTP
SMTP_HOST=localhost
SMTP_PORT=587

# CORS
FRONTEND_URL=http://localhost:3000
